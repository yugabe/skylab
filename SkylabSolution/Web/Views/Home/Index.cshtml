@{
	ViewBag.Title = "Azure Dev Tools @ BME";
	ViewBag.MetaKeywords = "Microsoft Azure Dev Tools, Imagine, DreamSpark, MSDNAA, Microsoft, szoftver, letöltés";
	ViewBag.MetaDescription = "Microsoft Azure Dev Tools szolgáltatás a Budapesti Műszaki és Gazdaságtudományi Egyetemen";
